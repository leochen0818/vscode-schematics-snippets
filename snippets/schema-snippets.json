{
  "Add a property to schema.json": {
    "prefix": "sch-schema-property",
    "body": [
      "\"${1:property}\": {",
      "  \"description\": \"${2:description}\",",
      "  \"type\": \"${3:string}\",",
      "  \"default\": \"${4:default}\"",
      "}"
    ]
  },
  "Add a property to schema.json with prompt": {
    "prefix": "sch-schema-property-with-prompt",
    "body": [
      "\"${1:property}\": {",
      "  \"description\": \"${2:description}\",",
      "  \"type\": \"${3:string}\",",
      "  \"default\": \"${4:value1}\",",
      "  \"x-prompt\": {",
      "    \"message\": \"${5:message}\",",
      "    \"type\": \"list\",",
      "    \"items\": [",
      "      { \"value\": \"${6:value1}\", \"label\": \"${7:label1}\" },",
      "      { \"value\": \"${8:value2}\", \"label\": \"${9:label2}\" }",
      "    ]",
      "  }",
      "}"
    ]
  }
}
